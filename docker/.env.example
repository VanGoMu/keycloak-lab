# Environment variables for Keycloak
# Copy this file to .env and adjust values

# ============================================
# ADMINISTRATION
# ============================================
KC_ADMIN_USERNAME=admin
KC_ADMIN_PASSWORD=admin

# ============================================
# DATABASE
# ============================================
DB_NAME=keycloak
DB_USER=keycloak
DB_PASSWORD=keycloak_password_change_me
KC_DB_TYPE=postgres

# ============================================
# HOSTNAME & NETWORKING
# ============================================
KC_HOSTNAME=localhost
# Para producción usar tu dominio real: auth.tudominio.com

# ============================================
# DATABASE CONNECTION POOL (Production Optimization)
# ============================================
KC_DB_POOL_INITIAL_SIZE=10
KC_DB_POOL_MIN_SIZE=10
KC_DB_POOL_MAX_SIZE=50

# ============================================
# FEATURES (separados por comas)
# ============================================
KC_FEATURES=token-exchange,admin-fine-grained-authz

# ============================================
# LOGS
# ============================================
KC_LOG_LEVEL=INFO

# ============================================
# MEMORIA (opcional)
# ============================================
# JAVA_OPTS_KC_HEAP=-XX:MaxRAMPercentage=70 -XX:InitialRAMPercentage=50

# ============================================
# SSL/TLS (solo producción)
# ============================================
# KC_HTTPS_CERTIFICATE_FILE=/opt/keycloak/conf/server.crt
# KC_HTTPS_CERTIFICATE_KEY_FILE=/opt/keycloak/conf/server.key

# ============================================
# DEMO USERS (for testing)
# ============================================
DEMO_USER_NAME=demo
DEMO_USER_PASSWORD=password
ADMIN_USER_NAME=admin
ADMIN_USER_PASSWORD=password
